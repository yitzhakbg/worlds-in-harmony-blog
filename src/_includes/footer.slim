footer.default-footer
  .row.bottom-spaced
    .large-12.columns.text-center.dark.epic
      h4.epic
        | Get the latest updates from Worlds in Harmony by following me on twitter
        a.mp-footer-link< href="{{ site.twitter }}" title="text twitter" @yitzhakbg
        | .
  .row.dark.text-center.top-spaced
    ul.large-block-grid-6.medium-block-grid-3.small-block-grid-2.red
      li
        a.mp-footer-link title="twitter" href="{{ site.twitter }}"
          i.fa.fa-twitter.fa-4x
      li
        a.mp-footer-link title="github" href="{{ site.github }}"
          i.fa.fa-github-alt.fa-4x
      li
        a.mp-footer-link title="youtube" href="{{ site.youtube }}"
          i.fa.fa-youtube.fa-4x
      li
        a.mp-footer-link title="email" href="mailto:{{ site.email }}"
          i.fa.fa-envelope.fa-4x
      li
        a.mp-footer-link title="instagram" href="{{ site.instagram }}"
          i.fa.fa-instagram.fa-4x
      li
        a.mp-footer-link title="google plus" href="{{ site.google_plus }}{% unless page.author %}?rel=author{% endunless %}"
          i.fa.fa-google-plus.fa-4x

